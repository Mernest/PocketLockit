<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockUnlockActivity">

    <Button
        android:id="@+id/unlockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/lockButton"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:text="Unlock" />

    <Button
        android:id="@+id/lockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight= "true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="71dp"
        android:layout_marginRight = "70dp"
        android:layout_marginTop="217dp"
        android:text="Lock" />

    <ImageView
        android:id="@+id/cactus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/download" />
    <ImageView
        android:id="@+id/greencactus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/greendownload" />

    <ImageView
        android:id="@+id/redcactus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/reddownload" />

    <ImageView
        android:id="@+id/redLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@drawable/thistheone" />

    <ImageView
        android:id="@+id/greenUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@drawable/thistheotherone" />


</RelativeLayout>